<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:android_custom="http://schemas.android.com/apk/res/com.zhonghong.launcher"
    android:layout_width="420dp"
    android:layout_height="100dp"
    android:background="@drawable/rate_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rate_checking_bg"
        android:orientation="vertical" >

    </LinearLayout>
    
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <!-- <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/rate_checking" /> -->
        <com.zhonghong.widget.RoundProgressbar
                android:id="@+id/rate_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:progress="50"
                android_custom:roundprogress_reach_bar_height="15dp"
                android_custom:roundprogress_reach_color="#00F0FF"
                android_custom:roundprogress_unreach_bar_height="3dp"
                android_custom:roundprogress_unreach_color="#1C4960"
                android_custom:roundprogress_radius="30dp"
                android_custom:roundprogress_text_size="25sp"
                android_custom:roundprogress_text_color="#FFFFFF" />
    </FrameLayout>

</FrameLayout>