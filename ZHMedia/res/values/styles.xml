<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Theme.Timetodo" parent="@android:style/Theme.Holo.Light">

        <!-- translucent system bars -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
         <item name="android:windowBackground">@drawable/main_bg</item>
        <!-- <item name="android:windowTranslucentNavigation">true</item> -->
        <!-- <item name="android:windowFullscreen">true</item> -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">#ffffffff</item>
        <!-- <item name="android:textSize">12sp</item> -->
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="listLineStyle">
        <item name="android:divider">@color/list_line</item>
        <item name="android:dividerHeight">0.1dp</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_green</item>
    </style>

</resources>