<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- 左侧 -->

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="92dp"
                android:background="@drawable/navi_selector" />

            <Button
                android:id="@+id/btn_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/phone_selector" />

            <Button
                android:id="@+id/btn_bt_musice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="78dp"
                android:background="@drawable/bt_music_selector" />
        </LinearLayout>

        <!-- 中间 -->

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical" 
                android:gravity="bottom|center_horizontal">
               <include layout="@layout/weather"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:layout_marginBottom="120dp"
                android:orientation="horizontal" >
                <!-- android:background="@drawable/test"> -->

                <!-- 通过layout_marginLeft和 layout_marginTop改变位置-->
                <com.zhonghong.widget.CircleMenu
                    android:id="@+id/id_menulayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.zhonghong.widget.CircleMenu>
            </LinearLayout>
        </FrameLayout>
        <!-- 右侧 -->

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="422dp"
                android:background="@drawable/contract_selector" />
        </LinearLayout>
    </LinearLayout>

    <!-- 下栏 -->

    <include layout="@layout/bottom" />

</LinearLayout>