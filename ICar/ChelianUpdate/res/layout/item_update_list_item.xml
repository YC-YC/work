<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp" >
    
    <LinearLayout
        android:id="@+id/ll_app_info"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:layout_width="820dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txv_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#00929a"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/txv_app_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#00929a"
            android:layout_marginBottom="5dp"/>
            <TextView
            android:id="@+id/txv_app_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#00929a"
            android:layout_marginBottom="5dp"/>
            <TextView
            android:id="@+id/txv_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#00929a"
            android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
	
    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="820dp"
        android:layout_height="2dp"
        android:layout_below="@id/ll_app_info"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_app_info"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_open"/>
</RelativeLayout>
