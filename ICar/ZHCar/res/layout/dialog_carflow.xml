<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/carflow_bg"
    android:fitsSystemWindows="false"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/carflow_tip_title"
        android:textColor="@color/white"
        android:textSize="29sp" />

    <TextView
        android:id="@+id/carflow_tip_content"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/carflow_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:textColor="@color/white"
            android:textSize="29sp"
            android:text="@string/carflow_cancle" />

        <Button
            android:id="@+id/carflow_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@drawable/btn_selector"
            android:textColor="@color/white"
            android:textSize="29sp"
            android:text="@string/carflow_confirm" />
    </LinearLayout>

</LinearLayout>