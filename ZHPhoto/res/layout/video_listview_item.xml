<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/listvideo_item_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/listview_default_video"
        android:scaleType="fitXY" />

    <com.zhonghong.media.util.MarqueeTextView
        android:id="@+id/listview_videoname_tv"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/listvideo_item_pic"
        android:ellipsize="end"
        android:marqueeRepeatLimit="3"
        android:singleLine="true"
        android:textSize="22sp"
         />

    <TextView
        android:id="@+id/listview_videotime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:visibility="gone" />

</RelativeLayout>